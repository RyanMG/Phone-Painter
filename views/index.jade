doctype 5
html
  head
    title Phone Brush
    meta(name="viewport", content="width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0")
    link(rel='stylesheet', href='/bower_components/normalize-css/normalize.css')
    link(rel='stylesheet', href='/css/main.css')
    script(src="/socket.io/socket.io.js")
    script(src="bower_components/jquery/jquery.min.js")
  body
    div(id="pickMode")
      h1
        'Pick a mode for this device'
      ul
        li(class="modeButton", data-type="brush") Audience Device
        li(class="modeButton", data-type="canvas") Canvas
        li(class="modeButton", data-type="master") Master Controller

    div(id="canvasShell", style="display:none")

    div(id="drawOptions", style="display:none")
      div(class="colors")
        div(class="colorBlock", data-color="#8158D9", style="background-color: #8158D9")
        div(class="colorBlock", data-color="#D958B1", style="background-color: #D958B1")
        div(class="colorBlock", data-color="#82F5E7", style="background-color: #82F5E7")
        div(class="colorBlock", data-color="#4B61F2", style="background-color: #4B61F2")
        div(class="colorBlock", data-color="#EB0C40", style="background-color: #EB0C40")
        div(class="colorBlock", data-color="#40DB2C", style="background-color: #40DB2C")
      form
        input(type="range", name="brushSize", id="brushSize", value="1", min="1", max="10")

    div(id="masterController", style="display:none")
      header
      div(class="currentSpecInfo")
        p(class="currentSpecDetails")
      div(class='specOptions')
        ul
          li(class="controlSpec", data-option="1") MAKE SCREEN WHITE
          li(class="controlSpec", data-option="2") MAKE SCREEN RED
          li(class="controlSpec", data-option="3") MAKE SCREEN YELLOW
          li(class="controlSpec", data-option="4") RESET TO CONTROLLER

    div(id="modelMask", style="display:none")
    div(id="modelWindow", style="display:none")
      h1
      p
      button(class="closeMsg") Close
    script(src="js/phoneBrush.js")
    script(src="js/brush.js")
    script(src="js/canvas.js")
    script(src="js/canvaswrapper.js")
    script(src="js/masterController.js")

    script(src="js/phoneBrush.js")


